rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // TTS Cache Collection - SIMPLIFIED FOR UPLOADS
    match /tts-cache/{cacheId} {
      // Anyone can read cached content
      allow read: if true;
      
      // Allow authenticated users to create/update cache entries
      // SIMPLIFIED: No strict field validation to allow flexible uploads
      allow create, update: if request.auth != null;
      
      // Only allow deletion by admin
      allow delete: if false;
    }
    
    // TTS Metadata Collection
    match /tts-metadata/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // User documents (if any)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
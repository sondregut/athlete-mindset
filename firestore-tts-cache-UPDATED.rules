rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // TTS Cache Collection - UPDATED FOR ANONYMOUS ACCESS
    match /tts-cache/{cacheId} {
      // Allow ANYONE (including anonymous users) to read cached content
      allow read: if true;
      
      // Allow authenticated users to create cache entries
      allow create: if request.auth != null;
      
      // Allow authenticated users to update (for access stats)
      allow update: if request.auth != null;
      
      // Only allow deletion by admin (for cleanup)
      allow delete: if false;
    }
    
    // TTS Metadata Collection
    match /tts-metadata/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // User documents (if you have any)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
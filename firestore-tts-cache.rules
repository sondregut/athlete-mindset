rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // TTS Cache Collection (note: using hyphen not underscore)
    match /tts-cache/{cacheId} {
      // Anyone can read cached content
      allow read: if true;
      
      // Allow authenticated users to create cache entries
      allow create: if request.auth != null && 
        request.resource.data.keys().hasAll(['text', 'voice', 'speed', 'model', 'fileSize', 'storageUrl', 'createdAt', 'accessCount', 'lastAccessed', 'hash']) &&
        request.resource.data.accessCount == 1;
      
      // Allow updates only to increment access count and update lastAccessed
      allow update: if request.auth != null &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['accessCount', 'lastAccessed']);
      
      // Only allow deletion by admin (for cleanup)
      allow delete: if false;
    }
    
    // TTS Metadata Collection
    match /tts-metadata/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}